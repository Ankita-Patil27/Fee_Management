<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:background="@color/white"
    tools:context="com.example.fee_management.Admin.Admin.Admin_Registration">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20sp" >

        <ImageView
            android:id="@+id/ivStudent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/admin_logo" />

        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:id="@+id/et_admin_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            app:borderColor="#409598"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <EditText
                android:id="@+id/et_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textColorHint="#409598"
                android:textColor="@color/black"
                android:inputType="text" />
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:id="@+id/et_admin_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            app:borderColor="#409598"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_admin_firstname">

            <EditText
                android:id="@+id/et_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:textColorHint="#409598"
                android:textColor="@color/black"
                android:inputType="text" />
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:id="@+id/et_admin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            app:borderColor="#409598"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_admin_lastname">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#409598"
                android:textColor="@color/black"
                android:inputType="textEmailAddress" />
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:id="@+id/et_admin_phoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            app:borderColor="#409598"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_admin_email">

            <EditText
                android:id="@+id/et_phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColorHint="#409598"
                android:textColor="@color/black"
                android:maxLength="10"/>
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:id="@+id/et_admin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            app:borderColor="#409598"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_admin_phoneno">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="#409598"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:maxLength="10"/>
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

        <Button
            android:id="@+id/btn_admin_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/et_admin_password"
            tools:layout_editor_absoluteX="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="SignUp"
            android:textColor="#121111"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivStudent" />

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Already Registered ? Click Here"
            android:textColor="#5F95AE"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_admin_signup" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="254dp"
            android:layout_marginLeft="254dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="276dp"
            android:layout_marginRight="276dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_signin" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>